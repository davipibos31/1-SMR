document.addEventListener('DOMContentLoaded',function(){let cookiePopup=document.getElementById('js-cookie');let cookie=document.cookie.split(';');let cookieAccepted=cookie.filter((item)=> item.includes('cookieAccepted=true')).length;if (!cookieAccepted){setTimeout(function (){cookiePopup.classList.add('js-cookie--showed');},3000);}document.getElementById('js-accept-cookie').addEventListener('click',function(){document.cookie="cookieAccepted=true;path=/;max-age=2592000";document.getElementById('js-cookie').classList.remove('js-cookie--showed');});});